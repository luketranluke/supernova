<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supernova Home Task</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="./assets/css/index.css" type="text/css">
</head>

<body>
    <div class="main-content">
        <div class="container">
            <h3 class="text-center mt-5 mb-4">Product Carousel</h3>

            <div id="productCarousel" class="carousel slide" data-ride="carousel" data-interval="90000">
                <div class="carousel-inner row" role="listbox">
                    {% for product in products%}
                    <div class="carousel-item col-xs-4 col-md-3 {% if forloop.first %}active{% endif %}">
                        <div class="product-item text-center">
                            <a href="#" title="{{ product.title }}">
                                <img class="img-fluid" src="{{ product.image }}" alt="{{ product.title }}">
                            </a>
                            <div class="product-item__meta px-3 py-2 d-flex flex-column align-items-center">
                                <div class="mb-2">
                                    {% assign rate = product.rate %}
                                    {% for i in (1..rate) %}
                                    {% include './assets/icon/star.svg' %}
                                    {% endfor %}
                                    <span class="product-item__reivew-count">({{ product.numberRate }})</span>
                                </div>
                                <div class="product-item__title d-flex align-items-center fw-600">
                                    {{ product.title }}
                                </div>
                                <div class="product-item__price py-2">
                                    {% if product.comparePrice %}
                                    <s class="price price--compare mr-2">
                                        {{ product.comparePrice }}
                                    </s>
                                    {% endif %}
                                    <span class="price fw-600">
                                        {{ product.price }}
                                    </span>
                                </div>
                                <button class="btn btn-primary btn-cart mt-2 w-100 fw-600">{{ product.button |
                                    default:'Add To Cart' }}</button>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>
                <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true">
                        {% include './assets/icon/chevron-left.svg' %}
                    </span>
                </a>
                <a class="carousel-control-next text-faded" href="#productCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true">
                        {% include './assets/icon/chevron-right.svg' %}
                    </span>
                </a>
            </div>

            <div class="text-center my-4">
                <button class="btn btn-outline btn-shop fw-600">Shop All</button>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"
        defer></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"
        defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"
        defer></script>

    <script src="./assets/js/main.js" defer></script>
</body>

</html>